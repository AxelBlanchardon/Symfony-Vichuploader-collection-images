{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1>Projet</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ projet.titre }}</td>
            </tr>
            <tr>
                <th>SousTitre</th>
                <td>{{ projet.sousTitre }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ projet.resume }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ projet.texte }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ projet.lien }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ projet.image }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ projet.actif ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('projet_index') }}">back to list</a>

    <a href="{{ path('projet_edit', {'id': projet.id}) }}">edit</a>

    {{ include('projet/_delete_form.html.twig') }}
{% endblock %}
